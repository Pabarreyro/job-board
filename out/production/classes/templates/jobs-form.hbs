{{#partial "content"}}

    {{#if editJob}}
        <h1>Edit Job</h1>
        <form action="/jobs/{{editJob.id}}/update" method="post">
            <div class="form-group">
                <label for="title">Job Title</label>
                <input class="form-control" id="title" name="title" type="text"{{editJob.title}}>
            </div>
            <div class="form-group">
                <label for="qualifications">Qualifications</label>
                <textarea class="form-control" id="qualifications" name="qualifications"{{editJob.qualifications}}></textarea>
            </div>
            <div class="form-group">
                <label for="company">Company</label>
                <input class="form-control" id="company" name="company" type="text"{{editJob.company}}>
            </div>
            <div class="form-group">
                <label for="salary">Salary</label>
                <input class="form-control" id="salary" name="salary" type="number"{{editJob.salary}}>
            </div>
            <button type="submit" class="btn btn-danger">Submit</button>
        </form>
